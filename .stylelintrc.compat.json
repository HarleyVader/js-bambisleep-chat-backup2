{
  "extends": ["@stylelint/postcss-css-in-js/recommended"],
  "plugins": ["stylelint-no-unsupported-browser-features"],
  "rules": {
    "plugin/no-unsupported-browser-features": [true, {
      "browsers": ["defaults"],
      "ignore": [
        "css-text-size-adjust",
        "css-orphans-widows",
        "webkit-overflow-scrolling",
        "scrollbar-width",
        "scrollbar-color"
      ],
      "ignorePartialSupport": true,
      "severity": "warning"
    }]
  },
  "ignoreFiles": [
    "**/bootstrap*.css",
    "**/vendor/**",
    "**/*.min.css"
  ]
}
