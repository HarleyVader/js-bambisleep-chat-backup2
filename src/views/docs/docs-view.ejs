<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %> - Documentation</title>
    <link rel="stylesheet" href="/css/pages/docs.css">
    <link rel="stylesheet" href="/css/highlight.css">
</head>
<body>
    <%- include('../partials/nav', { path: '/docs' }) %>
    
    <div class="container docs-container">
        <aside class="docs-sidebar">
            <div class="docs-sidebar-header">
                <a href="/docs" class="back-link">‚Üê All Documents</a>
            </div>
            <h3>Documentation Files</h3>
            <ul class="docs-list">
                <% if (typeof files !== 'undefined' && files.length > 0) { %>
                    <% files.forEach(function(file) { %>
                        <li>
                            <a href="<%= file.path %>" class="doc-link <%= (typeof fileName !== 'undefined' && file.name === fileName+'.md') ? 'active' : '' %>">
                                <%= file.title %>
                            </a>
                        </li>
                    <% }); %>
                <% } %>
            </ul>
        </aside>
        
        <section class="docs-content">
            <div class="docs-header">
                <h2><%= title %></h2>
                <div class="docs-actions">
                    <a href="/docs/<%= fileName %>.md" class="action-button" title="View Original File" target="_blank">
                        <span class="icon">üìÑ</span> View Original
                    </a>
                    <a href="/docs/<%= fileName %>/raw" class="action-button" title="View Raw Markdown" target="_blank">
                        <span class="icon">üìù</span> Raw
                    </a>
                </div>
            </div>
            
            <div class="markdown-body">
                <%- content %>
            </div>
        </section>
    </div>
    
    <%- include('../partials/footer') %>
</body>
</html>
