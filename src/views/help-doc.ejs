<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>    <title><%= title %> - Help</title>
    <link rel="stylesheet" href="/css/pages/help.css">
    <link rel="stylesheet" href="/css/pages/docs.css">
    <link rel="stylesheet" href="/css/github-markdown.css">    <style>
        .help-container {
            display: flex;
            gap: var(--spacing-lg);
            max-width: 1200px;
            margin: 0 auto;
            padding: var(--spacing-lg);
        }

        .help-sidebar {
            flex: 0 0 250px;
            background: rgba(var(--primary-color-rgb), 0.9);
            border-radius: var(--border-radius-lg);
            padding: var(--spacing-lg);
            height: fit-content;
            border: var(--border-width) solid var(--border-color);
            box-shadow: var(--shadow-md);
        }

        .help-sidebar h3 {
            color: var(--nav-alt);
            margin-bottom: var(--spacing-md);
            text-align: center;
        }

        .help-sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .help-sidebar li {
            margin-bottom: var(--spacing-xs);
        }

        .help-sidebar a {
            display: block;
            padding: var(--spacing-xs) var(--spacing-sm);
            color: var(--text-color);
            text-decoration: none;
            border-radius: var(--border-radius);
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }

        .help-sidebar a:hover {
            background: rgba(var(--nav-color-rgb), 0.6);
            border-left-color: var(--nav-alt);
            color: var(--nav-alt);
        }

        .help-sidebar a.active {
            background: rgba(var(--nav-alt-rgb), 0.2);
            border-left-color: var(--nav-alt);
            color: var(--nav-alt);
        }

        .help-content {
            flex: 1;
        }

        .back-link {
            display: inline-block;
            margin-bottom: var(--spacing-md);
            color: var(--nav-alt);
            text-decoration: none;
            font-size: 0.9rem;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <%- include('partials/nav', { path: '/help' }) %>
    
    <div class="help-container">
        <aside class="help-sidebar">
            <a href="/help" class="back-link">‚Üê Back to Help</a>
            <h3>Documentation</h3>
            <ul>
                <% docs.forEach(function(doc) { %>
                    <li>
                        <a href="<%= doc.path %>" class="<%= doc.name.replace('.md', '') === currentDoc ? 'active' : '' %>">
                            <%= doc.title %>
                        </a>
                    </li>
                <% }); %>
            </ul>
        </aside>
        
        <main class="help-content">
            <div class="markdown-body">
                <%- content %>
            </div>
        </main>
    </div>
    
    <%- include('partials/footer') %>
</body>

</html>
